[user]
    name = Thomas Omans
    email = thomas.omans@gmail.com

[color]
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    b = branch
    pom = push origin master
    fa = fetch --all
    aa = add --all
    l = log --graph --abbrev-commit --date=relative
    la = !git l --all
    r = !git --no-pager l -20
    ra = !git r --all
    head = !git l -1
    h = !git head
    p4 = !git-p4

[format]
    pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
    tool = vimdiff

[core]
    excludesfile = ~/.gitignore-global
